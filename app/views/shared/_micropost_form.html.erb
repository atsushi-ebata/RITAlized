<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t('view.micropost_form.compose') %>
  </div>
  <%= f.submit t('view.micropost_form.submit'), class: "btn btn-large btn-primary" %>
<% end %>
