<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "RITAlized", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to  t('view.navbar.home'), root_path %></li>
            <li><%= link_to  t('view.navbar.help'), help_path %></li>
            <li><%= link_to t('view.navbar.users'), users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('view.navbar.account') %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('view.navbar.profile'), current_user %></li>
                <li>
                  <%= link_to t('view.navbar.settings'), edit_user_path(current_user) %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('view.navbar.signout'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
