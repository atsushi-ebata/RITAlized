<% provide(:title, t('view.home.title')) %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3><%= t('view.home.feedtitle') %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="row">
    <div class="span8">
      <h1><%= t('view.home.welcome') %></h1>

      <h2><%= t('view.home.uvp') %></h2>

    </div>
    <div class="span4">
      <%= render 'sessions/new' %>
    </div>
  </div>
<% end %> 
